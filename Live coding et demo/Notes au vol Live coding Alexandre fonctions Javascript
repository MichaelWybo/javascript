    console.log("Je m'affiche uniquement dans la console - ideal pour débugger le script sans passer par l'affichage sur la page web");

    // J'affiche dans la console le texte stocké dans la varible
    var convocation = "coucou!";
    console.log(convocation)

    // Attention mettre un simple = au lieu de == attribue une nouvelle valeur à la variable
